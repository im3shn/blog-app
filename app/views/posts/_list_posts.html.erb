
<h1><%=Post.post_topic(@topic) %> Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <p>
      <%= Post.post_read_status(post, current_user) %>
    </p>
    <p>
      <strong>Headline:</strong>
      <%= post.headline %>
    </p>

    <p>
      <strong>Content:</strong>
      <%= truncate post.content,length: 50, omission: '...Read More' %>
    </p>
    <%=link_to "Show this post" , topic_post_path(post.topic, post)%>
  <% end %>
</div>
<% if @topic.present?%>
  <%= link_to "New post", new_topic_post_path(@topic) %>
<%end %>

<div>
  <%= pagy_nav(@pagy).html_safe%>
</div>


